{# templates/partials/navbar.html.twig #}
{# Este es el archivo de la barra de navegación que se incluye en todas las páginas #}

	{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/navbar.css') }}"> {% endblock %}

<nav class="navbar navbar-expand-lg bg-verde-claro py-3">
	<div class="container-fluid d-flex justify-content-between align-items-center">
		<!-- Logo -->
		<div class="d-flex align-items-center">
			<a class="navbar-brand fw-bold text-success" href="{{ path('app_home') }}">
				<img src="{{ asset('images/logo.png') }}" alt="Fresh&Go Logo" height="50">
			</a>
		</div>

		<!-- Menú central -->
		<div class="flex-grow-1 d-flex justify-content-center">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="navbar-link color-verde" href="{{ path('app_home') }}">Inicio</a>
				</li>
				<li class="nav-item">
					<a class="navbar-link color-verde" href="{{ path('app_categorias') }}">Categorías</a>
				</li>
				{% if app.user %}
					<li class="nav-item">
						<a class="navbar-link color-verde" href="{{ path('mostrar_carrito') }}">Carrito</a>
					</li>
				{% endif %}
			</ul>
		</div>

		<!-- Login/Admin -->
		<div class="d-flex align-items-center">
			<ul class="navbar-nav align-items-center">
				{% if app.user %}
					<li class="nav-item">
						<span class="text-success fw-semibold me-2">Hola,
							{{ app.user.email }}</span>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="btn btn-warning text-dark me-2" href="{{ path('admin') }}">Panel Admin</a>
						</li>
					{% endif %}
					<li class="nav-item">
						<a class="btn btn-sm btn-outline-danger" href="{{ path('app_logout') }}">Cerrar sesión</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a class="btn btn-sm btn-outline-primary me-2" href="{{ path('app_login') }}">Iniciar sesión</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-sm btn-success" href="{{ path('app_registro') }}">Registrarse</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>

</nav>
