{% extends 'base.html.twig' %}

{% block title %}Categorías{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/categorias.css') }}">
{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="text-center text-success mb-4">Nuestras Categorías</h1>

        <div class="row mb-4 justify-content-center">
            <div class="col-md-6">
                <input type="text" id="buscador-categorias" class="form-control" placeholder="Buscar categoría por nombre...">
            </div>

            <div class="row g-4 justify-content-center" id="contenedor-categorias">
                {% include 'categorias/_lista.html.twig' with { categorias: categorias } %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/filtrado_categorias.js') }}"></script>
{% endblock %}

