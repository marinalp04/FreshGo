{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block content %}
<div class="login-container d-flex justify-content-center align-items-center">
    <div class="card login-card shadow p-4">
        <div class="text-center mb-3">
            <img src="{{ asset('images/logo.png') }}" alt="Fresh&Go Logo" class="logo-login mb-2">
            <h2 class="text-success">Iniciar sesión</h2>
        </div>

        {% if error %}
            <div class="alert alert-danger">
                Correo o contraseña incorrectos.
            </div>
        {% endif %}

        <form method="post" id="form-login">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Correo electrónico</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

           <div class="mb-3 position-relative">
                <label for="inputPassword" class="form-label">Contraseña</label>
                <div class="input-group">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <button type="button" class="btn btn-outline-secondary" id="togglePassword" tabindex="-1">
                        <i class="bi bi-eye" id="iconPassword"></i>
                    </button>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-grid">
                <button class="btn btn-success" id="login_submit" type="submit">Entrar</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <span>¿No tienes cuenta?</span>
            <a href="{{ path('app_registro') }}" class="text-success fw-semibold">Regístrate aquí</a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/login.js') }}"></script>
{% endblock %}


