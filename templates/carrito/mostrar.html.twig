{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/carrito.css') }}">
{% endblock %}

{% block title %}Carrito{% endblock %}

{% block content %}
