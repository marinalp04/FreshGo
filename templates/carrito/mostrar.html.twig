                </form>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <form method="get" action="{{ path('pedido_resumen') }}">
                    <button type="submit" class="btn btn-success btn-lg px-4 boton-confirmar">Finalizar pedido</button>
                </form>
            </div>

        {% endif %}


</div>
{% endblock %}
